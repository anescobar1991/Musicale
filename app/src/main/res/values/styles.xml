<resources>

    <!-- Base application theme. -->
    <style name="MusicaleTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:dropDownListViewStyle">@style/actionBarSpinnerStyle</item>
    </style>

    <!-- Base application theme for when no actionBar is wanted. -->
    <style name="MusicaleThemeNoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!-- Main theme colors -->
        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="actionBarSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ffe4e4e4</item>
        <item name="android:dividerHeight">.25dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:width">168dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">@drawable/events_view_selector</item>
    </style>

</resources>