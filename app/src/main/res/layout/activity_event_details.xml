<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/musicale_toolbar"
        android:id="@+id/musicale_toolbar"/>

    <RelativeLayout
        android:id="@+id/activity_event_details_header"
        android:layout_width="wrap_content"
        android:layout_below="@+id/musicale_toolbar"
        android:background="@color/accent"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_event_details_event_image"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/event_image_accessibility_label"/>

        <TextView
            android:id="@+id/activity_event_details_event_title"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/activity_event_details_event_image"
            android:textSize="22sp"
            android:paddingStart="0dp"
            android:paddingEnd="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_event_details_event_date"
            android:layout_width="wrap_content"
            android:layout_marginEnd="4dp"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/activity_event_details_event_image"
            android:layout_below="@+id/activity_event_details_event_title"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_event_details_venue_name"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:layout_toEndOf="@id/activity_event_details_event_date"
            android:layout_below="@+id/activity_event_details_event_title"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_event_details_event_artists"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:paddingEnd="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:paddingStart="0dp"
            android:layout_toEndOf="@+id/activity_event_details_event_image"
            android:layout_below="@+id/activity_event_details_venue_name"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_event_details_tabs_container"
        android:layout_below="@+id/activity_event_details_header"
        android:layout_width="match_parent"
        android:background="@color/light_background"
        android:layout_height="wrap_content">


        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/activity_event_details_tabs"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:pstsIndicatorHeight="2dp"
            android:layout_centerHorizontal="true"
            app:pstsTextAllCaps="false"
            app:pstsIndicatorColor="@color/primary"
            android:background="@color/light_background"/>

    </RelativeLayout>

    <View
        android:id="@+id/activity_event_details_tabs_shadow"
        android:layout_width="match_parent"
        android:layout_below="@+id/activity_event_details_tabs_container"
        android:layout_height="4dp"
        android:background="@drawable/drop_shadow"/>

    <FrameLayout
        android:id="@+id/activity_event_details_view_pager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_event_details_tabs_shadow">

        <ProgressBar
            android:id="@+id/activity_event_details_view_pager_progress_bar"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_event_details_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</RelativeLayout>