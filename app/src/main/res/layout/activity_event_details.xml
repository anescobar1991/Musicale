<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anescobar.musicale.activities.EventDetailsActivity">

    <RelativeLayout
        android:id="@+id/activity_event_details_header"
        android:layout_width="wrap_content"
        android:background="@color/accent"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/activity_event_details_event_image"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/event_image_accessibility_label" />

        <TextView
            android:id="@+id/activity_event_details_event_title"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/activity_event_details_event_image"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_event_details_event_date"
            android:layout_width="wrap_content"
            android:layout_marginEnd="4dp"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@+id/activity_event_details_event_image"
            android:layout_below="@+id/activity_event_details_event_title"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_event_details_venue_name"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@id/activity_event_details_event_date"
            android:layout_below="@+id/activity_event_details_event_title"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_event_details_event_artists"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/activity_event_details_event_image"
            android:layout_below="@+id/activity_event_details_venue_name"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/activity_event_details_view_pager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_event_details_header">

        <TextView
            android:id="@+id/activity_event_details_view_pager_error_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/activity_event_details_view_pager_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical" />

        <com.viewpagerindicator.TitlePageIndicator
            android:id="@+id/activity_event_details_view_pager_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_event_details_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</RelativeLayout>