<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:background="@color/light_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/fragment_about_venue_loading_progressbar"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fragment_about_venue_error_message_container"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/fragment_about_venue_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fragment_about_venue_info_card"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                card_view:cardBackgroundColor="@color/white"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/fragment_about_venue_venue_info_container"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="16dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fragment_about_venue_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"/>

                        <TextView
                            android:id="@+id/fragment_about_venue_venue_name"
                            android:layout_width="wrap_content"
                            android:layout_toEndOf="@+id/fragment_about_venue_image"
                            android:textSize="20sp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:id="@+id/fragment_about_venue_phone_number_container"
                            android:layout_width="match_parent"
                            android:paddingLeft="4dp"
                            android:layout_below="@+id/fragment_about_venue_venue_name"
                            android:layout_toEndOf="@+id/fragment_about_venue_image"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/fragment_about_venue_phone_icon"
                                android:layout_width="20dp"
                                android:contentDescription="@string/about_venue_call_venue"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_action_call"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/fragment_about_venue_phone_number"
                                android:layout_width="wrap_content"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_toEndOf="@+id/fragment_about_venue_phone_icon"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/fragment_about_venue_url_container"
                            android:layout_width="match_parent"
                            android:paddingLeft="4dp"
                            android:layout_toEndOf="@+id/fragment_about_venue_image"
                            android:layout_below="@+id/fragment_about_venue_phone_number_container"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/fragment_about_venue_website_icon"
                                android:layout_width="20dp"
                                android:contentDescription="@string/about_venue_visit_venue_website"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_action_web_site"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/fragment_about_venue_url"
                                android:layout_width="wrap_content"
                                android:autoLink="web"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_toEndOf="@+id/fragment_about_venue_website_icon"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/fragment_about_venue_map_container"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/fragment_about_venue_venue_info_container"
                        android:paddingBottom="4dp"
                        android:layout_height="120dp"/>

                    <TextView
                        android:id="@+id/fragment_about_venue_address"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/fragment_about_venue_map_container"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_below="@+id/fragment_about_venue_info_card"
                android:layout_width="match_parent"
                card_view:cardBackgroundColor="@color/white"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/fragment_about_venue_other_events_container"
                    android:layout_width="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:animateLayoutChanges="true"
                    android:layout_below="@+id/fragment_about_venue_info_card"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fragment_about_venue_other_events_title"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/other_events_title_text"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/accent"
                    android:layout_height="wrap_content"/>

                <!--thin line separator-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/border_default_grey"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </FrameLayout>

</ScrollView>