<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_about_venue_image"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/fragment_about_venue_venue_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_about_venue_street"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_about_venue_city_postal_country"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fragment_about_venue_venue_show_in_map"
            android:layout_width="wrap_content"
            style="@android:style/Widget.Material.Button.Borderless.Small"
            android:layout_gravity="center_horizontal"
            android:text="@string/about_venue_show_in_map"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fragment_about_venue_venue_show_other_events"
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            style="@android:style/Widget.Material.Light.Button"
            android:background="@drawable/default_raised_button"
            android:text="@string/about_venue_show_other_events_button_text"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>