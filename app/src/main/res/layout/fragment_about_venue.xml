<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fragment_about_venue_venue_info_container"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_about_venue_image"
                android:layout_width="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/fragment_about_venue_venue_name"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/fragment_about_venue_image"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/accent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/fragment_about_venue_phone_number_container"
                android:layout_width="match_parent"
                android:layout_below="@+id/fragment_about_venue_venue_name"
                android:layout_toEndOf="@+id/fragment_about_venue_image"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fragment_about_venue_phone_icon"
                    android:layout_width="20dp"
                    android:contentDescription="@string/about_venue_call_venue"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_call"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_about_venue_phone_number"
                    android:layout_width="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="0dp"
                    android:layout_toEndOf="@+id/fragment_about_venue_phone_icon"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_about_venue_url_container"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/fragment_about_venue_image"
                android:layout_below="@+id/fragment_about_venue_phone_number_container"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fragment_about_venue_website_icon"
                    android:layout_width="20dp"
                    android:contentDescription="@string/about_venue_visit_venue_website"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_web_site"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fragment_about_venue_url"
                    android:layout_width="wrap_content"
                    android:paddingStart="4dp"
                    android:autoLink="web"
                    android:paddingEnd="0dp"
                    android:layout_toEndOf="@+id/fragment_about_venue_website_icon"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/fragment_about_venue_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fragment_about_venue_venue_info_container"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:background="#ffb9b9b9"/>

        <RelativeLayout
            android:id="@+id/fragment_about_venue_location_container"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:background="@drawable/layout_border"
            android:padding="4dp"
            android:layout_below="@+id/fragment_about_venue_separator"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fragment_about_venue_map_container"
                android:layout_width="match_parent"
                android:paddingBottom="4dp"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/fragment_about_venue_address"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_below="@+id/fragment_about_venue_map_container"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_about_venue_venue_show_other_event_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/fragment_about_venue_location_container"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fragment_about_venue_venue_show_other_events"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                style="@android:style/Widget.Material.Light.Button"
                android:background="@drawable/default_raised_button"
                android:text="@string/about_venue_show_other_events_button_text"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/fragment_about_venue_other_events_loading"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/fragment_about_venue_other_events_container"
            android:layout_width="match_parent"
            android:layout_below="@+id/fragment_about_venue_venue_show_other_event_layout"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_about_venue_other_events_title"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:text="@string/other_events_title_text"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/accent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/fragment_about_venue_separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="#ffb9b9b9"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>