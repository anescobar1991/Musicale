<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_below="@+id/musicale_toolbar"
    android:background="@color/accent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/event_image_accessibility_label"/>

    <TextView
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/event_image"
        android:textSize="22sp"
        android:paddingStart="0dp"
        android:paddingEnd="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/event_image"
        android:layout_below="@+id/event_title"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/event_venue_name"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/event_date"
        android:layout_below="@+id/event_title"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/event_artists"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/event_image"
        android:layout_below="@+id/event_venue_name"
        android:layout_height="wrap_content"/>

</RelativeLayout>
