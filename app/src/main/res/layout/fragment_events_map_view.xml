<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_events_map_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/loading_overlay"
        android:id="@+id/fragment_events_map_view_loading_overlay"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone" />

    <Button
        android:id="@+id/fragment_events_map_redo_search"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:layout_gravity="bottom"
        android:visibility="gone"
        style="@android:style/Widget.Material.Light.Button"
        android:background="@drawable/default_raised_button"
        android:text="@string/events_map_redo_search_button_text"
        android:layout_height="wrap_content" />

</FrameLayout>