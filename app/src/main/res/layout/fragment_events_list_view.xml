<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_events_list_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_background"
    android:weightSum="24" >

    <FrameLayout
        android:id="@+id/fragment_events_list_view_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24">

        <ProgressBar
            android:id="@+id/fragment_events_list_view_loading"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_events_listView_event_cards_holder"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_events_list_view_more_events_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/fragment_events_list_view_more_events_loading"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_gravity="center"
            app:spb_sections_count="4"
            app:spb_colors="@array/progress_bar_colors"
            app:spb_speed="2.0"
            app:spb_stroke_width="4dp"
            app:spb_stroke_separator_length="0dp" />

        <Button
            android:id="@+id/fragment_events_list_view_load_more_button"
            android:layout_width="match_parent"
            style="@android:style/Widget.Material.Light.Button"
            android:background="@drawable/default_raised_button"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:text="@string/event_list_view_load_more_button_text"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </FrameLayout>

</LinearLayout>

