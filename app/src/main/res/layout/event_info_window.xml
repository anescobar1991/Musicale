<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_info_window_event_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="4dp"
        android:paddingStart="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/event_info_window_event_title_textfield"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/accent"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/event_info_window_event_image"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_info_window_event_date_textfield"
        android:textSize="15sp"
        android:layout_below="@+id/event_info_window_event_title_textfield"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/event_info_window_event_image"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_info_window_venue_name_textfield"
        android:layout_below="@+id/event_info_window_event_date_textfield"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/event_info_window_event_image"
        android:layout_height="wrap_content" />

</RelativeLayout>