<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_about_artist_artist_image"
            android:contentDescription="@null"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_about_artist_artist_name"
            android:textColor="@color/accent"
            android:layout_toEndOf="@+id/fragment_about_artist_artist_image"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_about_artist_tags"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/fragment_about_artist_artist_image"
            android:layout_below="@+id/fragment_about_artist_artist_name"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/fragment_about_artist_bio_container"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/layout_border"
            android:padding="4dp"
            android:layout_below="@+id/fragment_about_artist_artist_image"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_about_artist_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>