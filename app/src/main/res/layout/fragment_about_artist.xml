<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/fragment_about_artist_artist_name"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/fragment_about_artist_artist_image"
            android:contentDescription="@null"
            android:layout_below="@+id/fragment_about_artist_artist_name"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_about_artist_bio"
            android:layout_width="match_parent"
            android:layout_below="@+id/fragment_about_artist_artist_name"
            android:layout_toEndOf="@+id/fragment_about_artist_artist_image"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>