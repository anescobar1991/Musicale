<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:elevation="40dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_card_event_image"
            android:layout_width="wrap_content"
            android:maxHeight="100dp"
            android:paddingTop="8dp"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/event_card_event_title_textfield"
            android:layout_width="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:textSize="20sp"
            android:textColor="#ff2f2f2f"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/event_Card_event_date_textfield"
            android:layout_width="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_below="@+id/event_card_event_title_textfield"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/event_card_venue_name_textfield"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_below="@+id/event_Card_event_date_textfield"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:maxLength="33"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/event_card_venue_location_textfield"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:layout_below="@+id/event_card_venue_name_textfield"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/event_card_show_in_map_button"
            android:layout_marginTop="16dp"
            style="@android:style/Widget.Holo.Light.Button.Borderless"
            android:layout_below="@+id/event_card_venue_location_textfield"
            android:layout_width="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:layout_height="wrap_content"
            android:text="@string/event_card_show_in_map_button_text"
            android:minHeight="40dp"
            android:minWidth="0dp"
            android:textColor="@color/accent"
            android:textSize="16sp" />

        <Button
            android:id="@+id/event_card_more_details_button"
            android:layout_marginTop="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            style="@android:style/Widget.Holo.Light.Button.Borderless"
            android:layout_below="@+id/event_card_venue_location_textfield"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/event_card_show_in_map_button"
            android:gravity="start|center_vertical"
            android:layout_height="wrap_content"
            android:text="@string/event_card_more_details_button_text"
            android:minHeight="40dp"
            android:minWidth="0dp"
            android:textColor="@color/primary_dark"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


