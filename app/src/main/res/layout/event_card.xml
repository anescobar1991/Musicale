<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="40dp"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginBottom="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_card_event_image"
            android:layout_width="100dp"
            android:paddingTop="8dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/event_card_event_title_textfield"
            android:layout_width="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/event_card_event_date_textfield"
            android:layout_width="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_below="@+id/event_card_event_title_textfield"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/event_card_venue_name_textfield"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_below="@+id/event_card_event_date_textfield"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:maxLength="33"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/event_card_venue_location_textfield"
            android:layout_toEndOf="@+id/event_card_event_image"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:layout_below="@+id/event_card_venue_name_textfield"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>